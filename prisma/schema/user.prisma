model User {
    id              String   @id @default(uuid())
    email           String   @unique
    password        String
    name            String?
    role            Role     @default(STUDENT)
    address         String?
    isRouteAssigned Boolean  @default(false)
    createdAt       DateTime @default(now())
    updatedAt       DateTime @updatedAt

    // For fee management
    student StudentFeeAssignment[] @relation("student")
    admin   StudentFeeAssignment[] @relation("admin")

    // for transport management
    transportAsStudent StudentTransportAssignment[] @relation("transport_student")
    transportAsAdmin   StudentTransportAssignment[] @relation("transport_admin")

    @@map("users")
}
